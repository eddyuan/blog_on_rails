<p style="color: green"><%= notice %></p>

<h1 class="mt-4 mb-3">
  <%= @post.title %>
</h1>
<p>
  <%= @post.body %>
</p>
<small>
  Posted <%= time_tag @post.created_at, "data-local":"time-ago" %>
</small>
<div class="d-flex mt-4">
  <%= link_to "Edit this post", edit_post_path(@post), class:"btn btn-outline-primary me-3" %>
  <%= button_to "Destroy this post", @post, method: :delete, class:"btn btn-outline-danger" %>
</div>

<%= render 'posts/comments', post: @post %>


